<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.LoginMapper">
  <resultMap id="BaseResultMap" type="com.example.demo.entity.User">
    <!--@mbg.generated-->
    <!--@Table `user`-->
    <id column="user_id" property="userId"/>
    <result column="user_name" property="userName"/>
    <result column="user_account" property="userAccount"/>
    <result column="user_phone" property="userPhone"/>
    <result column="user_password" property="userPassword"/>
    <result column="user_mail" property="userMail"/>
    <result column="user_time" property="userTime"/>
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    user_id, user_name, user_account, user_phone, user_password, user_mail, user_time
  </sql>

  <select id="selectByUserName" resultMap="BaseResultMap">
    SELECT *
    FROM USER
    WHERE user_delete = 0
      AND user_name = #{userName}
  </select>

  <select id="selectByPhone" resultMap="BaseResultMap">
    SELECT *
    FROM USER
    WHERE user_delete = 0
      AND user_phone = #{phone}
  </select>
</mapper>